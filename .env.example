
# Database
DATABASE_URL=postgresql://username:password@host:port/database

# Session Secret
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Backblaze B2 Configuration
BACKBLAZE_APPLICATION_KEY_ID=your_application_key_id
BACKBLAZE_APPLICATION_KEY=your_application_key
BACKBLAZE_BUCKET_ID=your_bucket_id
BACKBLAZE_BUCKET_NAME=your_bucket_name
BACKBLAZE_ENDPOINT=https://api.backblazeb2.com

# Email Configuration (Gmail)
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-gmail-app-password

# Application Configuration
BASE_URL=http://localhost:5000
NODE_ENV=development

# Custom Domain Configuration
CUSTOM_DOMAIN_CNAME_TARGET=cdn.yourdomain.com

# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Optional: File Upload Limits
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif,image/avif

# Optional: Storage Limits by Plan (in bytes)
FREE_PLAN_STORAGE_LIMIT=1073741824
STARTER_PLAN_STORAGE_LIMIT=5368709120
PRO_PLAN_STORAGE_LIMIT=53687091200
ENTERPRISE_PLAN_STORAGE_LIMIT=107374182400
