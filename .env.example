
# Database - PostgreSQL Required
DATABASE_URL="postgresql://username:password@localhost:5432/database_name"

# JWT Secret (generate a secure random string)
JWT_SECRET="your-super-secret-jwt-key-here-make-it-long-and-random"

# Email Configuration (Gmail)
GMAIL_USER="your-email@gmail.com"
GMAIL_APP_PASSWORD="your-app-password"

# Base URL for email links
BASE_URL="http://localhost:5000"

# Backblaze B2 Configuration
BACKBLAZE_KEY_ID="your-backblaze-key-id"
BACKBLAZE_APPLICATION_KEY="your-backblaze-application-key"
BACKBLAZE_BUCKET_ID="your-bucket-id"
BACKBLAZE_BUCKET_NAME="your-bucket-name"
BACKBLAZE_ENDPOINT="https://api.backblazeb2.com"

# Custom Domain Configuration
CUSTOM_DOMAIN=""
CDN_BASE_URL=""

# API Configuration
API_RATE_LIMIT="1000"
MAX_FILE_SIZE="10485760"
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,image/webp"

# Security
BCRYPT_ROUNDS="12"
SESSION_TIMEOUT="24h"

# Application Status
STATUS="development"

# Development
NODE_ENV="development"
PORT="5000"

# Allowed Origins for Production (comma-separated)
ALLOWED_ORIGINS="https://yourdomain.com,https://www.yourdomain.com"

# OAuth Configuration
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"
